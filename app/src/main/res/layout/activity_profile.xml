<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="@string/PROFILE"
        android:text="PROFILE"
        android:textColor="#03A9F4"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_Name"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:hint="@string/Name"
        android:inputType="textPersonName"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_Email"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Name" />


    <EditText
        android:id="@+id/tv_Birthdate"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:hint="@string/BittheDate"
        android:inputType="date"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Email" />

    <RadioGroup
        android:id="@+id/check_geender"
        android:layout_width="382dp"
        android:layout_height="79dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_country">

        <RadioButton
            android:id="@+id/rab1_Male"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/Male"
            android:text="Male"
            android:textColor="#9C27B0"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/red1_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/Female"
            android:text="Female"
            android:textColor="#9C27B0"
            android:textSize="24sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/tv_country"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:hint="@string/Country"
        android:inputType="textPersonName"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Birthdate" />
</androidx.constraintlayout.widget.ConstraintLayout>