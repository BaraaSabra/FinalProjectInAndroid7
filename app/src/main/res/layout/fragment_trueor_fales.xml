<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TrueorFales">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/timer"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/point"
        android:gravity="center"
        android:hint="00:00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="293dp"
        android:background="@drawable/question"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Question"
            android:layout_width="376dp"
            android:layout_height="93dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="Question"
            android:textColor="#E91E63"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/check_geender"
            android:layout_width="329dp"
            android:layout_height="189dp"

            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/red_true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="@string/Female"
                android:text="true"
                android:textColor="#9C27B0"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rab_fules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="@string/Female"
                android:text="false"
                android:textColor="#9C27B0"
                android:textSize="24sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_chick"
            android:layout_width="250dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:backgroundTint="#CD6FDD"
            android:text="Check your answer"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>